<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/layout_profil2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ec3a78"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="65dp"
            android:id="@+id/view6"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ec3a78"
            android:id="@+id/view5"
            android:layout_marginTop="81dp"
            android:layout_below="@+id/citySetting"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mon Profil"
            android:id="@+id/textView4"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#ec3a78"
            android:layout_above="@+id/text7"
            android:layout_alignEnd="@+id/text6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nom"
            android:id="@+id/text7"
            android:layout_marginStart="22dp"
            android:layout_below="@+id/view6"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/nameSetting"
            android:layout_below="@+id/text7"
            android:layout_alignStart="@+id/text7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Username"
            android:id="@+id/text6"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/nameSetting"
            android:layout_alignStart="@+id/usernameSetting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/usernameSetting"
            android:layout_below="@+id/text6"
            android:layout_alignStart="@+id/textView5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email"
            android:id="@+id/textView5"
            android:layout_below="@+id/usernameSetting"
            android:layout_alignStart="@+id/nameSetting"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/emailSetting"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Other"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:textColor="#ec3a78"
            android:layout_above="@+id/textView7"
            android:layout_alignEnd="@+id/text7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="A propos"
            android:id="@+id/textView7"
            android:layout_marginTop="27dp"
            android:clickable="true"
            android:layout_below="@+id/view5"
            android:layout_alignEnd="@+id/emailSetting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="City"
            android:id="@+id/textView8"
            android:layout_below="@+id/emailSetting"
            android:layout_alignStart="@+id/emailSetting"
            android:layout_marginTop="21dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/citySetting"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8"/>

    </RelativeLayout>
</ScrollView>
